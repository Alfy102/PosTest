{
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./dist",
    "target": "ESNext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "lib": [
      "ESNext",
      "dom"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/tests/*.spec.ts",
    "eslint.config.mjs"
  ],
  "exclude": [
    "node_modules",
    "./dist"
  ]
}