pipeline {
    agent any
    stages {
        stage('Build and Test') {
            parallel {
                stage('Build') {
                    steps {
                        sh 'echo "Building the application"'
                    }
                }
                stage('Unit Tests') {
                    steps {
                        sh 'echo "Running unit tests"'
                    }
                }
                stage('Linting') {
                    steps {
                        sh 'echo "Running linting"'
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                sh 'echo "Deploying the application"'
            }
        }
    }
}